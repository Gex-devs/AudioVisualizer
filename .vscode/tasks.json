// Note: Output file must be changed
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean and build",
            "dependsOn": [
                "Build clean",
                "Build all"
            ]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Flash STM32",
            "windows": {
                "command": "STM32_Programmer_CLI",
                "args": [
                    "-c",
                    "port=SWD",
                    "-d",
                    "${workspaceFolder}\\build\\audioVisualizer.hex",
                    "-v",
                    "-hardRst"
                ]
            },
            "linux": {
                "command": "/home/gex/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
                "args": [
                    "-c",
                    "port=SWD",
                    "-d",
                    "${workspaceFolder}/build/audioVisualizer.hex",
                    "-v",
                    "-rst",
                    "-halt",
                ]
            },
            "dependsOn": [
                "Build all"
            ]
        },
        {
            "label": "Build STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.build}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Clean STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.cleanBuild}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.flash}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}